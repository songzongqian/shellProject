<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04172A"
    android:orientation="vertical">

    <include layout="@layout/layout_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/card_xxx"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="23dp"
                android:text="订单编号"
                android:textColor="#8D99B2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_bianhaoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="23dp"
                android:text="20190309225785"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="6dp"
                android:text="订单类型"
                android:textColor="#8D99B2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_orderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp"
                android:text="转出"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="7dp"
                android:text="订单金额"
                android:textColor="#8D99B2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_orderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp"
                android:text="$1,000"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="11dp"
                android:text="转出地址"
                android:textColor="#8D99B2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_orderAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="11dp"
                android:text="abc101010203020wlewo02"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="11dp"
                android:text="本位币种"
                android:textColor="#8D99B2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_benweihuobi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="11dp"
                android:text="港币"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="7dp"
                android:text="当前汇率"
                android:textColor="#8D99B2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_huilv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp"
                android:text="1: 7.8393"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="8dp"
                android:text="折算金额"
                android:textColor="#8D99B2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_jine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:text="7839.3 HK dollars"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="12dp"
                android:text="服务奖励"
                android:textColor="#8D99B2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_fuwujiangli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="12dp"
                android:text="0.01 USDT"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_Send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/button_unfinish"
        android:text="转出 （14:45）"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

</LinearLayout>
