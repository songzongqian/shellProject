                    android:layout_marginLeft="161dp"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ouzhou"/>

                <!--中国-->
                <ImageView
                    android:id="@+id/ZhongGuo"
                    android:layout_width="wrap_content"
