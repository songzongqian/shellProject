<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#08233F"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_firstItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_money_Name"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:src="@mipmap/money_name" />


        <LinearLayout
            android:id="@+id/ll_middle"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/iv_money_Name"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_orderCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:text="韩元：0"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/orderAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="地址：0xl0lkewfjweifjewl'a"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/ll_middle"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_orderStatue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="23dp"
                    android:text="待处理"
                    android:textColor="#F4376D"
                    android:textSize="12sp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="6dp"
                android:gravity="right"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_clock"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/clock" />

                <TextView
                    android:id="@+id/tv_clockTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="1dp"
                    android:text="15:30"
                    android:textColor="#4AB2E7"
                    android:textSize="12sp"

                    />


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="20dp"
        android:src="@mipmap/line_ju" />

</LinearLayout>
