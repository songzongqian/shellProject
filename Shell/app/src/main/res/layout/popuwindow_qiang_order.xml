<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="34dp"
    android:layout_marginRight="34dp"
    android:paddingBottom="@dimen/dp_10"
    android:background="@drawable/card_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="17dp"
            android:text="@string/you_have_new_order"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/close_top" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="38dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_jinE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23dp"
                    android:text="@string/or_orjine"
                    android:textColor="#8D99B2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_jinEvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/tv_jinE"
                    android:text="$ 0"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/tv_orderType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23dp"
                    android:text="@string/or_ortype"
                    android:textColor="#8D99B2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_orderTypeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/tv_orderType"
                    android:text="转出"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/tv_MoneyType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23dp"
                    android:text="@string/the_standard_currency"
                    android:textColor="#8D99B2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_MoneyTypeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/tv_MoneyType"
                    android:text="港币"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/tv_serverJiangLi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23dp"
                    android:text="@string/or_fwjl"
                    android:textColor="#8D99B2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_serverJiangLiValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/tv_serverJiangLi"
                    android:text="0.01 USDT"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </RelativeLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">


            <ProgressBar
                android:id="@+id/order_progress"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:indeterminate="false"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@drawable/common_pressbar_bar" />


            <LinearLayout
                android:id="@+id/ll_btn_qiangdan"
                android:layout_width="@dimen/dp_69"
                android:layout_height="@dimen/dp_69"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/circle_get_order">

                <TextView
                    android:id="@+id/tv_qiangdan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pop_getorder"
                    android:singleLine="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_daojishi"
                    android:layout_below="@id/tv_qiangdan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="10 S"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

            </LinearLayout>







        </RelativeLayout>

    </LinearLayout>





</LinearLayout>
