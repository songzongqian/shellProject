<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04172A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_top" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@mipmap/money_logo" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="35dp"
                android:background="@mipmap/bancircle"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="60dp"
                    android:text="@string/rmb_hasamount"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_chiyouCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="28dp"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="30sp" />


                    <TextView
                        android:id="@+id/tv_qingsuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="72dp"
                        android:text="@string/rmb_qingsuan"
                        android:textColor="#576E98"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/tv_tibi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="28dp"
                        android:text="@string/rmb_tibi"
                        android:textColor="#576E98"
                        android:textSize="12sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="34dp"
                        android:text="@string/rmb_djcount"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"/>


                    <TextView
                        android:id="@+id/tv_dongjieCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="28dp"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="34dp"
                        android:text="@string/rmb_canuse"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"/>


                    <TextView
                        android:id="@+id/tv_keyongCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="28dp"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <Button
                        android:id="@+id/btn_chongzhi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/btn_left"
                        android:text="@string/rmb_cz"
                        android:layout_marginLeft="34dp"
                        android:textColor="#678DA8"/>

                    <Button
                        android:id="@+id/btn_zhiya"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/btn_right"
                        android:text="@string/or_zhiya"
                        android:textSize="14sp"
                        android:layout_marginRight="28dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>





            </LinearLayout>




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_zhangdan"
                android:textSize="15sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="21dp"
                android:textColor="#ffffff"/>


            <RelativeLayout
                android:id="@+id/ll_shouyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/tv_myshouyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/money_myshouyi"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:textColor="#ffffff"/>

                <ImageView
                    android:layout_toRightOf="@id/tv_myshouyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:src="@mipmap/icon_right"/>

            </RelativeLayout>

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rmb_sl"
                android:textSize="14sp"
                android:layout_marginTop="22dp"
                android:textColor="#678DA8"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"/>


            <TextView
                android:layout_toRightOf="@id/tv_one"
                android:id="@+id/tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rmb_lx"
                android:textSize="14sp"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="22dp"
                android:textColor="#678DA8"
                android:layout_centerVertical="true"/>


            <TextView
                android:layout_toRightOf="@id/tv_two"
                android:id="@+id/tv_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rmb_zt"
                android:textSize="14sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="22dp"
                android:textColor="#678DA8"
                android:layout_centerVertical="true"/>


            <TextView
                android:id="@+id/tv_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rmb_time"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:textSize="14sp"
                android:layout_marginTop="22dp"
                android:textColor="#678DA8"
                android:layout_centerVertical="true"/>
        </RelativeLayout>


        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smartRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            >

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>


        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上滑加载更多......"
            android:textColor="#156097"
            android:layout_marginTop="22dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>


    </LinearLayout>

</RelativeLayout>
